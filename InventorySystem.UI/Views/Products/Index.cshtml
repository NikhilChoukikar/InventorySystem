@model IEnumerable<InventorySystem.UI.Models.ProductViewModel>
@{
    Layout = "_Layout";
}
<h2>Products</h2>

<p><a class="btn btn-success" href="/Products/Create">Create product</a></p>

<table class="table table-striped">
    <thead>
        <tr><th>Name</th><th>Quantity</th><th>Price</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Quantity</td>
                <td>@p.Price</td>
            </tr>
        }
    </tbody>
</table>